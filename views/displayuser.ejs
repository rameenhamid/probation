<!DOCTYPE html>
<html lang="en">
<head>
    <!-- head content -->
</head>
<body>
    <div class="container">
        <% if (post) { %>
            <h1>Post Details</h1>
            <p><strong>Title:</strong> <%= post.title %></p>
            <p><strong>Content:</strong> <%= post.content %></p>
            <!-- Include other details as needed -->
            <div>
                <a href="/users/<%= post.userId %>/posts/<%= post.id %>/edit">Edit</a>
                <form action="/users/<%= post.userId %>/posts/<%= post.id %>/delete" method="post">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% } else { %>
            <p>Post not found.</p>
        <% } %>
    </div>
</body>
</html>
