<!DOCTYPE html>
<html lang="en">
<head>
    <!-- head content -->
</head>
<body>
    <div class="container">
        <h1>Post Details</h1>
        <p><strong>Title:</strong> <%= post.title %></p>
        <p><strong>Content:</strong> <%= post.content %></p>
        <!-- Include other details as needed -->

        <!-- Button to Edit Post -->
        <form action="/posts/users/<%= post.userId %>/posts/<%= post.id %>/edit" method="get">
            <button type="submit">Edit Post</button>
        </form>

        <!-- Button to Update Post -->
        <form action="/posts/users/<%= post.userId %>/posts/<%= post.id %>/delete" method="post">
            <button type="submit">Delete Post</button>
        </form>
    </div>
</body>
</html>
